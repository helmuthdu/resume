{
  "extends": [
    "react-app",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "plugins": [
    "prettier"
  ],
  "rules": {
    "jsx-a11y/href-no-hash": [0],
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "bracketSpacing": true,
        "singleQuote": true,
        "trailingComma": "none",
        "semi": true,
        "arrowParens": "avoid",
        "jsxBracketSameLine": true
      }
    ]
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  }
}